<div class="mt-4">
  <h3>Create Blog</h3>
  <form method="POST" action="/courses/store">
    <div class="mb-3">
      <label for="name" class="form-label">Blog name</label>
      <input name="name" type="text" class="form-control" id="name">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Blog description</label>
      <textarea name="description" type="text" class="form-control" id="description"></textarea>
    </div>
    <div class="mb-3">
      <label for="level" class="form-label">Blog level</label>
      <input name="level" type="text" class="form-control" id="level">
    </div>
    <div class="mb-3">
      <label for="videoId" class="form-label">Blog videoId</label>
      <input name="videoId" type="text" class="form-control" id="videoId">
    </div>
    <button type="submit" class="btn btn-primary">Add Blog</button>
  </form>
</div>